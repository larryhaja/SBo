PRGNAM=ProjectLibre
VERSION=${VERSION:-1.5.5}
BUILD=${BUILD:-1}
TAG=${TAG:-_SBo}

ARCH=noarch
SRCNAM=projectlibre

CWD=$(pwd)
TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

set -e

rm -rf $PKG
mkdir -p $TMP $PKG $OUTPUT
cd $TMP
rm -rf $SRCNAM-$VERSION
tar xvf $CWD/$SRCNAM-$VERSION.tar.gz

cd $SRCNAM-$VERSION
chown -R root:root .
find . \
 \( -perm 777 -o -perm 775 -o -perm 711 -o -perm 555 -o -perm 511 \) \
 -exec chmod 755 {} \; -o \
 \( -perm 666 -o -perm 664 -o -perm 600 -o -perm 444 -o -perm 440 -o -perm 400 \) \
 -exec chmod 644 {} \;

# Change the installation folder to /opt and fix Java folder
patch -p1 < $CWD/projectlibre-path.patch

mkdir -p $PKG/opt/$PRGNAM/
install -m 755 projectlibre.sh $PKG/opt/$PRGNAM/projectlibre.sh
install -m 755 projectlibre.jar $PKG/opt/$PRGNAM/projectlibre.jar
cp -rf {lib,license} $PKG/opt/$PRGNAM/

mkdir -p $PKG/usr/bin
ln -s /opt/ProjectLibre/projectlibre.sh $PKG/usr/bin/projectlibre

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION/
cat $CWD/$PRGNAM.SlackBuild > $PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild

mkdir -p $PKG/install
cat $CWD/slack-desc > $PKG/install/slack-desc

cd $PKG
/sbin/makepkg -l y -c n $OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-tgz}
